<%- include('../includes/header.ejs') %>
<%- include('../includes/navigation.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-10 offset-sm-1">
            <h3><%= pageTitle %></h3>
            <% if(errorMsg) { %>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Error!</strong> <%= errorMsg %>
            </div>
            <% } %>
            <div class="info-form">
                <form method="POST" action="<%= url %>" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control <%= validationErrors.find(e => e.param === 'title') ? 'is-invalid' : '' %>" value="<%= oldValues.title %>"/>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" name="price" class="form-control <%= validationErrors.find(e => e.param === 'price') ? 'is-invalid' : '' %>" value="<%= oldValues.price %>"/>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" name="image" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control <%= validationErrors.find(e => e.param === 'description') ? 'is-invalid' : '' %>" value="<%= oldValues.description %>"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success ">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/footer.ejs') %>